{
    "env": {
        "browser": true,
        "es6": true,
        "amd": true,
        "node": true
    },
    "settings": {
        "react": {
            "version": "detect"
            }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "plugin:react/jsx-runtime"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "react", 
        "prettier"
    ],
    "rules": {
        "react/jsx-uses-vars": "error",
        "no-console": "error",
        "linebreak-style": ["error", "windows"],
        "semi": [ "error","always"],
        "prettier/prettier": "warn"    
    }
}